<h1>Day Planner</h1>

<ul>
    {{#each plans}}
    <li>
        <p>
            {{this.id}}. {{this.plan}}
            <button type="button">Delete Plan!</button>
        </p>

    </li>

    {{/each}}
</ul>

<h1>Create a plan</h1>
<form id="createplan">
    <textarea type="text" name="plan"></textarea>
    <button type="submit">Save Plan</button>
</form>

{{!-- <h1>Update a plan</h1>
<select name="">
    <option>{{plan}}</option>
</select> --}}
<script>
    $("#createplan").on("submit", function (event) {

        event.preventDefault();

        var newPlan = { plan: $("#createplan [name=plan]").val().trim() };
        console.log(newPlan);
        $.ajax(
            "api/plans", {
                type: "POST",
                data: newPlan
            }).then(function () {            // after posting data and save it in our database, execute the function below
                console.log("created new plan");
                // Reload the page to get the updated list 
                location.reload();
            });


    });
</script>